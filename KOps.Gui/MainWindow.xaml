<Window x:Class="KOps.Gui.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KOps.Gui"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <local:CallListView
            Grid.Row="0"
            DataContext="{Binding CallsListViewModel}"></local:CallListView>
        <local:CallControlView
            Grid.Row="1"
            DataContext="{Binding CallControlViewModel}"></local:CallControlView>
    </Grid>
</Window>
